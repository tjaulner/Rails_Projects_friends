<h2>Change Your Password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
<div class="col-md-5">
<hr>
  <div class="form-group">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em class="fs-6 fw-lighter">(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control mt-2"%>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mt-2"%>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class:"btn btn-primary btn-sm mt-2"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>