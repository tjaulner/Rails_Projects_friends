<h2>Log In</h2>

<div class="col-md-5">
<hr>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control mt-2", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class:"mt-2"%><br />
    <%= f.password_field :password, class:"form-control mt-2", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check mt-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-secondary btn-sm mt-2"%>
  </div>
  <hr>
<% end %>

<%= render "devise/shared/links" %>
</div>